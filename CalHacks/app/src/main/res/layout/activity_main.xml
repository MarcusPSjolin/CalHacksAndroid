<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:background="@drawable/container_animation"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/store_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_button_height"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:layout_marginTop="@dimen/button_margin_top"
        android:background="@drawable/button_ripple"
        android:text="@string/store_items"
        android:textColor="@color/white"
        android:textSize="@dimen/large_button_text_size"/>

    <Button
        android:id="@+id/get_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_button_height"
        android:layout_below="@id/store_button"
        android:layout_marginTop="@dimen/button_margin_bottom"
        android:background="@drawable/button_ripple"
        android:text="@string/get_items"
        android:textColor="@color/white"
        android:textSize="@dimen/large_button_text_size"/>

</RelativeLayout>
