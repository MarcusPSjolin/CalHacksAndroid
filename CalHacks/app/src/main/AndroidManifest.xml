<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marcussjolin.calhacks" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name=".CalHacksApplication"
        android:allowBackup="true"
        android:icon="@drawable/wolf"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".StoreStuffActivity"
            android:label="@string/title_activity_store_stuff" >
        </activity>
        <activity
            android:name=".ItemDescriptionActivity"
            android:label="@string/title_activity_item_description" >
        </activity>
        <activity
            android:name=".ConfirmPostmatesActivity"
            android:label="@string/title_activity_confirm_postmates" >
        </activity>
    </application>

</manifest>
